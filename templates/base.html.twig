{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Bienvenue!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
        <link rel="icon" href="{{ asset('gestion_Conges_favicon.ico') }}" type="image/x-icon">
        
        <style>
            :root {
                --primary-color: #4361ee;
                --primary-light: #4895ef;
                --primary-dark: #3f37c9;
                --secondary-color: #4cc9f0;
                --accent-color: #f72585;
                --success-color: #2ecc71;
                --warning-color: #f39c12;
                --danger-color: #e74c3c;
                --dark-color: #2d3748;
                --light-color: #f8fafc;
                --gray-100: #f7fafc;
                --gray-200: #edf2f7;
                --gray-300: #e2e8f0;
                --gray-400: #cbd5e0;
                --gray-500: #a0aec0;
                --gray-600: #718096;
                --gray-700: #4a5568;
                --gray-800: #2d3748;
                --gray-900: #1a202c;
            }
            
            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }
            
            body {
                font-family: 'Nunito', sans-serif;
                background-color: var(--gray-100);
                color: var(--gray-800);
                min-height: 100vh;
                display: flex;
                flex-direction: column;
                position: relative;
            }
            
            h1, h2, h3, h4, h5, h6 {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                color: var(--gray-900);
            }
            
            /* Navbar Styles */
            .navbar {
                background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-color) 50%, var(--primary-light) 100%);
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                padding: 0.8rem 2rem;
                position: sticky;
                top: 0;
                z-index: 1000;
            }
            
            .navbar-brand {
                color: white !important;
                font-weight: 700;
                font-size: 1.6rem;
                letter-spacing: 0.5px;
                position: relative;
                padding-left: 15px;
            }
            
            .navbar-brand:before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 5px;
                height: 25px;
                background-color: var(--accent-color);
                border-radius: 3px;
            }
            
            .navbar-nav .nav-link {
                color: rgba(255, 255, 255, 0.85) !important;
                font-weight: 600;
                padding: 0.7rem 1.2rem;
                transition: all 0.3s ease;
                border-radius: 8px;
                margin: 0 5px;
                position: relative;
                overflow: hidden;
            }
            
            .navbar-nav .nav-link:before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 3px;
                background-color: white;
                transition: width 0.3s ease;
                border-radius: 3px;
            }
            
            .navbar-nav .nav-link:hover {
                color: white !important;
                transform: translateY(-2px);
            }
            
            .navbar-nav .nav-link:hover:before {
                width: 70%;
            }
            
            .navbar-nav .nav-item.active .nav-link {
                color: white !important;
                background-color: rgba(255, 255, 255, 0.15);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }
            
            .navbar-nav .nav-item.active .nav-link:before {
                width: 70%;
            }
            
            .navbar-toggler {
                border: none;
                padding: 0.5rem;
                border-radius: 8px;
                background-color: rgba(255, 255, 255, 0.1);
                transition: all 0.3s ease;
            }
            
            .navbar-toggler:hover {
                background-color: rgba(255, 255, 255, 0.2);
            }
            
            .navbar-toggler-icon {
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.9)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            }
            
            /* Main Container Styles */
            .page-wrapper {
                flex: 1;
                padding: 2rem 0;
            }
            
            .main-container {
                background-color: white;
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                padding: 2.5rem;
                position: relative;
                overflow: hidden;
                margin-bottom: 2rem;
                border: 1px solid var(--gray-200);
            }
            
            .main-container:before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--accent-color));
            }
            
            .page-header {
                margin-bottom: 2rem;
                border-bottom: 1px solid var(--gray-200);
                padding-bottom: 1.2rem;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            
            .page-header h1 {
                font-weight: 700;
                color: var(--gray-900);
                font-size: 1.8rem;
                margin-bottom: 0;
                position: relative;
                padding-left: 15px;
            }
            
            .page-header h1:before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 5px;
                height: 25px;
                background-color: var(--primary-color);
                border-radius: 3px;
            }
            
            /* Card Styles */
            .card {
                border: none;
                border-radius: 12px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
                overflow: hidden;
                margin-bottom: 1.5rem;
                border: 1px solid var(--gray-200);
            }
            
            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }
            
            .card-header {
                background-color: white;
                border-bottom: 1px solid var(--gray-200);
                font-weight: 700;
                color: var(--primary-color);
                padding: 1.2rem 1.5rem;
                font-size: 1.1rem;
            }
            
            .card-body {
                padding: 1.5rem;
            }
            
            /* Button Styles */
            .btn {
                border-radius: 8px;
                padding: 0.6rem 1.5rem;
                font-weight: 600;
                transition: all 0.3s ease;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                position: relative;
                overflow: hidden;
            }
            
            .btn:after {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                background: linear-gradient(rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0));
                clip-path: polygon(0 0, 100% 0, 100% 70%, 0 100%);
                z-index: 1;
            }
            
            .btn-primary {
                background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
                border: none;
            }
            
            .btn-primary:hover {
                background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
            }
            
            .btn-success {
                background: linear-gradient(135deg, var(--success-color), #27ae60);
                border: none;
            }
            
            .btn-success:hover {
                background: linear-gradient(135deg, #27ae60, var(--success-color));
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(46, 204, 113, 0.3);
            }
            
            .btn-danger {
                background: linear-gradient(135deg, var(--danger-color), #c0392b);
                border: none;
            }
            
            .btn-danger:hover {
                background: linear-gradient(135deg, #c0392b, var(--danger-color));
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(231, 76, 60, 0.3);
            }
            
            /* Table Styles */
            .table {
                border-collapse: separate;
                border-spacing: 0;
                width: 100%;
            }
            
            .table th {
                background-color: var(--gray-100);
                color: var(--gray-800);
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.8rem;
                letter-spacing: 0.5px;
                padding: 1rem;
                border-top: none;
                border-bottom: 2px solid var(--gray-300);
            }
            
            .table td {
                padding: 1rem;
                vertical-align: middle;
                border-top: 1px solid var(--gray-200);
            }
            
            .table tbody tr {
                transition: all 0.2s ease;
            }
            
            .table tbody tr:hover {
                background-color: var(--gray-100);
            }
            
            .table-responsive {
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                border: 1px solid var(--gray-200);
            }
            
            /* Form Styles */
            .form-control {
                border-radius: 8px;
                padding: 0.7rem 1rem;
                border: 1px solid var(--gray-300);
                transition: all 0.3s ease;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.02);
            }
            
            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
            }
            
            .form-group label {
                font-weight: 600;
                color: var(--gray-700);
                margin-bottom: 0.5rem;
            }
            
            /* Alert Styles */
            .alert {
                border: none;
                border-radius: 10px;
                padding: 1rem 1.5rem;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                position: relative;
                overflow: hidden;
            }
            
            .alert:before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 5px;
                border-radius: 3px 0 0 3px;
            }
            
            .alert-success {
                background-color: rgba(46, 204, 113, 0.1);
                color: #27ae60;
            }
            
            .alert-success:before {
                background-color: var(--success-color);
            }
            
            .alert-danger {
                background-color: rgba(231, 76, 60, 0.1);
                color: #c0392b;
            }
            
            .alert-danger:before {
                background-color: var(--danger-color);
            }
            
            .alert-warning {
                background-color: rgba(243, 156, 18, 0.1);
                color: #d35400;
            }
            
            .alert-warning:before {
                background-color: var(--warning-color);
            }
            
            .alert-info {
                background-color: rgba(52, 152, 219, 0.1);
                color: #2980b9;
            }
            
            .alert-info:before {
                background-color: #3498db;
            }
            
            /* Badge Styles */
            .badge {
                padding: 0.5em 0.8em;
                font-weight: 600;
                border-radius: 6px;
                font-size: 75%;
            }
            
            .badge-primary {
                background-color: var(--primary-color);
            }
            
            .badge-success {
                background-color: var(--success-color);
            }
            
            .badge-danger {
                background-color: var(--danger-color);
            }
            
            .badge-warning {
                background-color: var(--warning-color);
                color: white;
            }
            
            /* Footer Styles */
            .footer {
                background-color: white;
                padding: 2rem 0;
                color: var(--gray-600);
                border-top: 1px solid var(--gray-200);
                margin-top: auto;
            }
            
            .footer-content {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }
            
            .footer-text {
                font-size: 0.9rem;
                margin-bottom: 0;
            }
            
            .footer-links {
                display: flex;
                gap: 1.5rem;
            }
            
            .footer-links a {
                color: var(--gray-600);
                transition: all 0.3s ease;
                font-size: 0.9rem;
            }
            
            .footer-links a:hover {
                color: var(--primary-color);
                text-decoration: none;
            }
            
            /* Stats Card */
            .stats-card {
                border-radius: 12px;
                padding: 1.5rem;
                background-color: white;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
                border: 1px solid var(--gray-200);
                height: 100%;
                display: flex;
                flex-direction: column;
            }
            
            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }
            
            .stats-card-header {
                display: flex;
                align-items: center;
                margin-bottom: 1rem;
            }
            
            .stats-card-icon {
                width: 48px;
                height: 48px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 1rem;
                font-size: 1.5rem;
                color: white;
            }
            
            .stats-card-title {
                font-size: 1rem;
                font-weight: 600;
                color: var(--gray-700);
                margin-bottom: 0;
            }
            
            .stats-card-value {
                font-size: 2rem;
                font-weight: 700;
                color: var(--gray-900);
                margin-bottom: 0.5rem;
            }
            
            .stats-card-trend {
                font-size: 0.9rem;
                display: flex;
                align-items: center;
            }
            
            .stats-card-trend.positive {
                color: var(--success-color);
            }
            
            .stats-card-trend.negative {
                color: var(--danger-color);
            }
            
            /* Loader */
            .loader {
                width: 100%;
                height: 5px;
                position: fixed;
                top: 0;
                left: 0;
                background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--accent-color));
                z-index: 9999;
                background-size: 200% 200%;
                animation: gradient 2s ease infinite;
                display: none;
            }
            
            @keyframes gradient {
                0% {
                    background-position: 0% 50%;
                }
                50% {
                    background-position: 100% 50%;
                }
                100% {
                    background-position: 0% 50%;
                }
            }
            
            /* Responsive Styles */
            @media (max-width: 992px) {
                .navbar {
                    padding: 0.8rem 1rem;
                }
                
                .navbar-nav .nav-link {
                    padding: 0.5rem 1rem;
                    margin: 0.2rem 0;
                }
                
                .main-container {
                    padding: 1.5rem;
                }
                
                .page-header {
                    flex-direction: column;
                    align-items: flex-start;
                }
                
                .page-header h1 {
                    margin-bottom: 1rem;
                }
                
                .footer-content {
                    flex-direction: column;
                    text-align: center;
                }
                
                .footer-links {
                    margin-top: 1rem;
                    justify-content: center;
                }
            }
            
            @media (max-width: 576px) {
                .main-container {
                    padding: 1.2rem;
                }
                
                .card-header, .card-body {
                    padding: 1rem;
                }
                
                .stats-card {
                    padding: 1rem;
                }
                
                .stats-card-value {
                    font-size: 1.5rem;
                }
            }
            
            /* Animations */
            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            
            .fade-in {
                animation: fadeIn 0.5s ease forwards;
            }
            
            /* Custom Scrollbar */
            ::-webkit-scrollbar {
                width: 8px;
                height: 8px;
            }
            
            ::-webkit-scrollbar-track {
                background: var(--gray-100);
            }
            
            ::-webkit-scrollbar-thumb {
                background: var(--gray-400);
                border-radius: 4px;
            }
            
            ::-webkit-scrollbar-thumb:hover {
                background: var(--gray-500);
            }

            /* Dashboard Cards */
            .dashboard-cards {
                margin: 2rem 0;
            }

            .dashboard-card-link {
                display: block;
                text-decoration: none;
                color: inherit;
            }

            .dashboard-card-link:hover {
                text-decoration: none;
                color: inherit;
            }

            .dashboard-card {
                position: relative;
                background-color: white;
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
                transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                height: 100%;
                min-height: 220px;
                display: flex;
                flex-direction: column;
                z-index: 1;
                border: 1px solid var(--gray-200);
            }

            .dashboard-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
            }

            .dashboard-card-bg {
                position: absolute;
                top: 0;
                right: 0;
                width: 150px;
                height: 150px;
                background: linear-gradient(135deg, rgba(67, 97, 238, 0.1), rgba(67, 97, 238, 0.05));
                border-radius: 50%;
                transform: translate(30%, -30%);
                z-index: -1;
                transition: all 0.5s ease;
            }

            .dashboard-card-bg-alt {
                background: linear-gradient(135deg, rgba(76, 201, 240, 0.1), rgba(76, 201, 240, 0.05));
            }

            .dashboard-card:hover .dashboard-card-bg {
                transform: scale(1.5) translate(20%, -20%);
                opacity: 0.8;
            }

            .dashboard-card-icon {
                position: absolute;
                top: 20px;
                right: 20px;
                width: 60px;
                height: 60px;
                background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 1.8rem;
                box-shadow: 0 10px 20px rgba(67, 97, 238, 0.3);
                transition: all 0.3s ease;
                z-index: 2;
            }

            .dashboard-card-icon-alt {
                background: linear-gradient(135deg, var(--secondary-color), #3a86ff);
                box-shadow: 0 10px 20px rgba(76, 201, 240, 0.3);
            }

            .dashboard-card:hover .dashboard-card-icon {
                transform: scale(1.1) rotate(10deg);
            }

            .dashboard-card-content {
                padding: 25px;
                flex: 1;
            }

            .dashboard-card-title {
                font-size: 1.5rem;
                font-weight: 700;
                color: var(--gray-900);
                margin-bottom: 10px;
                padding-right: 70px;
            }

            .dashboard-card-description {
                color: var(--gray-600);
                font-size: 0.95rem;
                margin-bottom: 20px;
                max-width: 90%;
            }

            .dashboard-card-stats {
                display: flex;
                gap: 20px;
                margin-top: auto;
            }

            .dashboard-card-stat {
                display: flex;
                flex-direction: column;
            }

            .stat-value {
                font-size: 1.5rem;
                font-weight: 700;
                color: var(--gray-900);
                line-height: 1.2;
            }

            .stat-label {
                font-size: 0.8rem;
                color: var(--gray-600);
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .dashboard-card-action {
                background-color: var(--gray-100);
                padding: 15px 25px;
                display: flex;
                align-items: center;
                justify-content: flex-end;
                transition: all 0.3s ease;
                border-top: 1px solid var(--gray-200);
            }

            .dashboard-card:hover .dashboard-card-action {
                background-color: var(--primary-color);
            }

            .dashboard-card:hover .dashboard-card-action .btn-text {
                color: white;
            }

            .dashboard-card-action .btn-text {
                font-weight: 600;
                color: var(--gray-700);
                display: flex;
                align-items: center;
                transition: all 0.3s ease;
            }

            .dashboard-card-action .btn-text i {
                margin-left: 8px;
                transition: transform 0.3s ease;
            }

            .dashboard-card:hover .dashboard-card-action .btn-text i {
                transform: translateX(5px);
            }

            /* Variante pour la carte Congés */
            .dashboard-card:nth-child(2):hover .dashboard-card-action {
                background-color: var(--secondary-color);
            }

            /* Animation supplémentaire */
            @keyframes pulse {
                0% {
                    box-shadow: 0 0 0 0 rgba(67, 97, 238, 0.4);
                }
                70% {
                    box-shadow: 0 0 0 10px rgba(67, 97, 238, 0);
                }
                100% {
                    box-shadow: 0 0 0 0 rgba(67, 97, 238, 0);
                }
            }

            .dashboard-card:hover .dashboard-card-icon {
                animation: pulse 1.5s infinite;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                .dashboard-card {
                    min-height: 180px;
                }
                
                .dashboard-card-icon {
                    width: 50px;
                    height: 50px;
                    font-size: 1.5rem;
                }
                
                .dashboard-card-title {
                    font-size: 1.3rem;
                }
                
                .stat-value {
                    font-size: 1.3rem;
                }
            }
        </style>
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="loader" id="page-loader"></div>
        
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <i class="fas fa-calendar-check mr-2"></i>Gestion Congés
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item {% if app.request.get('_route') == 'app_home' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="fas fa-home mr-1"></i> Accueil
                            </a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'app_stats' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_stats') }}">
                                <i class="fas fa-chart-line mr-1"></i> Statistiques
                            </a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'app_stats_user' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_stats_user') }}">
                                <i class="fas fa-user-chart mr-1"></i> Stats par utilisateur
                            </a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'user' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('user') }}">
                                <i class="fas fa-users mr-1"></i> Utilisateurs
                            </a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'conge' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('conge') }}">
                                <i class="fas fa-list-alt mr-1"></i> Liste des congés
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="page-wrapper">
            <div class="container">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show fade-in mb-4" role="alert">
                            <div class="d-flex align-items-center">
                                {% if label == 'success' %}
                                    <i class="fas fa-check-circle mr-3" style="font-size: 1.2rem;"></i>
                                {% elseif label == 'danger' or label == 'error' %}
                                    <i class="fas fa-exclamation-circle mr-3" style="font-size: 1.2rem;"></i>
                                {% elseif label == 'warning' %}
                                    <i class="fas fa-exclamation-triangle mr-3" style="font-size: 1.2rem;"></i>
                                {% elseif label == 'info' %}
                                    <i class="fas fa-info-circle mr-3" style="font-size: 1.2rem;"></i>
                                {% endif %}
                                <div>{{ message }}</div>
                            </div>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                <div class="main-container fade-in">
                    {% if block('page_title') is defined %}
                        <div class="page-header">
                            <h1>{% block page_title %}{% endblock %}</h1>
                            {% if block('page_actions') is defined %}
                                <div class="page-actions">
                                    {% block page_actions %}{% endblock %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                    
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        
        <footer class="footer">
            <div class="container">
                <div class="footer-content">
                    <p class="footer-text">© {% if "now"|date("Y") == "2023" %}2023{% else %}2023-{{ "now"|date("Y") }}{% endif %} Gestion des Congés. Tous droits réservés.</p>
                    <div class="footer-links">
                        <a href="#"><i class="fas fa-question-circle mr-1"></i> Aide</a>
                        <a href="#"><i class="fas fa-shield-alt mr-1"></i> Confidentialité</a>
                        <a href="#"><i class="fas fa-file-contract mr-1"></i> Conditions</a>
                    </div>
                </div>
            </div>
        </footer>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script>
            // Activer les tooltips Bootstrap
            $(function () {
                $('[data-toggle="tooltip"]').tooltip();
                $('[data-toggle="popover"]').popover();
                
                // Animation pour les éléments lors du chargement
                setTimeout(function() {
                    $('.fade-in').addClass('show');
                }, 100);
                
                // Loader pour les transitions de page
                $(document).on('click', 'a:not([target="_blank"]):not([href^="#"]):not([href^="javascript"]):not([href^="mailto"])', function() {
                    $('#page-loader').fadeIn(300);
                });
                
                // Animation douce pour le défilement des ancres
                $(document).on('click', 'a[href^="#"]:not([href="#"])', function (event) {
                    event.preventDefault();
                    var target = $($(this).attr('href'));
                    if (target.length) {
                        $('html, body').animate({
                            scrollTop: target.offset().top - 80
                        }, 500);
                    }
                });
                
                // Effet de survol pour les tableaux
                $('.table tbody tr').hover(
                    function() {
                        $(this).addClass('bg-light');
                    },
                    function() {
                        $(this).removeClass('bg-light');
                    }
                );
                
                // Confirmation pour les actions de suppression
                $('[data-confirm]').on('click', function(e) {
                    if (!confirm($(this).data('confirm') || 'Êtes-vous sûr de vouloir effectuer cette action ?')) {
                        e.preventDefault();
                    }
                });
            });
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>